      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image,:fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg" %>
          <table class="table">
            <tbody>
              <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
            </tbody>
          </table>
          <% if user == current_user %>
            <%= link_to edit_user_path(user.id), class: 'btn btn-default col-xs-12' do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user.id), class: 'btn btn-default col-xs-12' do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          <% end %>
          <% end %>



          <h2>New book</h2>
          <%= form_for(book) do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Body</h4>
            <%= f.text_area :body %>
          <%= f.submit 'Create book', class: 'btn btn-primary col-xs-12' %>
          <% end %>
      </div>