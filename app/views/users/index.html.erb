<%= render 'layouts/header' %>
  <div class="container">
    <div class="row">
      <%= render 'layouts/info', user:@user,book:@booka %>
      <div class="col-xs-9">
      <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @users.each do |user| %>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to 'Show',user_path(user.id) %>
            </td>
            </tr>
          </tbody>
            <% end %>
        </table>
      </div>
    </div>
  </div>
<%= render 'layouts/footer' %>