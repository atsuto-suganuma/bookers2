<%= render 'layouts/header' %>
<div class="container">
  <%= flash[:notice] %>
    <div class="row">
      <%= render 'layouts/info', user:@user,book:@book %>
    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
           </thead>
           <tbody>
             <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td>
        	        <%= link_to book_path(book.id) do %>
      		          <% book.title %>
      	          <% end %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
             <% end %>
           </tbody>
        </table>
      </div>
    </div>
  </div>

<%= render "layouts/footer" %>