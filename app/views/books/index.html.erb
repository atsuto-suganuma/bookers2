
<%= render 'layouts/header' %>
  <div class="container">
  <% if @booka.errors.any? %>
       <div id="error_explanation">
         <h2><%= @booka.errors.count %>errors prohibited this obj from being saved</h2>
            <ul>
              <% @booka.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
       </div>
     <% end %>
    <div class="row">
      <%= render 'layouts/info', user:@user,book:@booka %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @books.each do |book| %>
              <td>
                <%= link_to book_path(book.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
             </td>
             <td>
               <%= link_to book_path(book.id) do %>
               <%= book.title %>
               <% end %>
             </td>
             <td>
               <%= book.body %>
             </td>
           </tr>
         </tbody>
           <% end %>
       </table>
      </div>
    </div>
  </div>

<%= render 'layouts/footer' %>